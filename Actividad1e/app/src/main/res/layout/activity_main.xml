<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:weightSum="2"
    android:baselineAligned="false">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/relative_background"
        android:layout_marginRight="5dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_margin="10dp"
            android:layout_height="100dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Album 1"
            android:id="@+id/textViewAlbum1"
            android:background="#840000"
            android:textSize="20sp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_margin="10dp"
            android:layout_height="100dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Album 2"
            android:id="@+id/textViewAlbum2"
            android:background="#FFFF00"
            android:textColor="#000"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_below="@+id/textViewAlbum1"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_margin="10dp"
            android:layout_height="100dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Album 3"
            android:id="@+id/textViewAlbum3"
            android:background="#C6C3C6"
            android:textColor="#000"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_below="@+id/textViewAlbum2"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <GridLayout
            android:columnCount="2"
            android:rowCount="7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/grid_background"
            android:layout_marginStart="5dp">

            <TextView
                android:layout_height="80dp"
                android:layout_rowWeight="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Foto 1"
                android:id="@+id/textView1"
                android:layout_row="0"
                android:layout_column="0"
                android:background="#FFFF00"
                android:textColor="#000"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:gravity="center" />

            <TextView
                android:layout_height="80dp"
                android:layout_rowWeight="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Foto 2"
                android:id="@+id/textView2"
                android:layout_row="0"
                android:layout_column="1"
                android:background="#FFFF00"
                android:textColor="#000"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:gravity="center" />

            <TextView
                android:layout_height="80dp"
                android:layout_rowWeight="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Foto 3"
                android:id="@+id/textView3"
                android:layout_row="1"
                android:layout_column="0"
                android:background="#FFFF00"
                android:textColor="#000"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:gravity="center" />

            <TextView
                android:layout_height="80dp"
                android:layout_rowWeight="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Foto 4"
                android:id="@+id/textView4"
                android:layout_row="1"
                android:layout_column="1"
                android:background="#FFFF00"
                android:textColor="#000"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:gravity="center" />

            <TextView
                android:layout_height="80dp"
                android:layout_rowWeight="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Foto 5"
                android:id="@+id/textView5"
                android:layout_row="2"
                android:layout_column="0"
                android:background="#FFFF00"
                android:textColor="#000"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:gravity="center" />

            <TextView
                android:layout_height="80dp"
                android:layout_rowWeight="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Foto 6"
                android:id="@+id/textView6"
                android:layout_row="2"
                android:layout_column="1"
                android:background="#FFFF00"
                android:textColor="#000"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:gravity="center" />

            <TextView
                android:layout_height="80dp"
                android:layout_rowWeight="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Foto 7"
                android:id="@+id/textView7"
                android:layout_row="3"
                android:layout_column="0"
                android:background="#FFFF00"
                android:textColor="#000"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:gravity="center" />

            <TextView
                android:layout_height="80dp"
                android:layout_rowWeight="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Foto 8"
                android:id="@+id/textView8"
                android:layout_row="3"
                android:layout_column="1"
                android:background="#FFFF00"
                android:textColor="#000"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:gravity="center" />

            <TextView
                android:layout_height="80dp"
                android:layout_rowWeight="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Foto 9"
                android:id="@+id/textView9"
                android:layout_row="4"
                android:layout_column="0"
                android:background="#FFFF00"
                android:textColor="#000"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:gravity="center" />

            <TextView
                android:layout_height="80dp"
                android:layout_rowWeight="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Foto 10"
                android:id="@+id/textView10"
                android:layout_row="4"
                android:layout_column="1"
                android:background="#FFFF00"
                android:textColor="#000"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:gravity="center" />

            <TextView
                android:layout_height="80dp"
                android:layout_rowWeight="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Foto 11"
                android:id="@+id/textView11"
                android:layout_row="5"
                android:layout_column="0"
                android:background="#FFFF00"
                android:textColor="#000"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:gravity="center" />

            <TextView
                android:layout_height="80dp"
                android:layout_rowWeight="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Foto 12"
                android:id="@+id/textView12"
                android:layout_row="5"
                android:layout_column="1"
                android:background="#FFFF00"
                android:textColor="#000"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:gravity="center" />

            <TextView
                android:layout_height="80dp"
                android:layout_rowWeight="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Foto 13"
                android:id="@+id/textView13"
                android:layout_row="6"
                android:layout_column="0"
                android:background="#FFFF00"
                android:textColor="#000"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:gravity="center" />

            <TextView
                android:layout_height="80dp"
                android:layout_rowWeight="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Foto 14"
                android:id="@+id/textView14"
                android:layout_row="6"
                android:layout_column="1"
                android:background="#FFFF00"
                android:textColor="#000"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:gravity="center" />

        </GridLayout>
    </ScrollView>
</LinearLayout>
